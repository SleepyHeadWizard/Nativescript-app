<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Results" class="action-bar" />
    <StackLayout>
        <Label text="Your Score: {{ score }}" class="h1" />
        <ListView items="{{ data }}">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{ question }}" textWrap="true" />
                    <Label text="Your Answer: {{ userAnswer }}" />
                    <Label text="Correct Answer: {{ correct_answer }}" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <Button text="Restart Quiz" tap="onRestartTap" />
    </StackLayout>
</Page>