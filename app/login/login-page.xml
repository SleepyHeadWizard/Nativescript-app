<Page class="page" navigatingTo="onNavigatingTo" actionBarHidden="true" cssFile="login/login-page.css">
    <StackLayout class="center-layout" verticalAlignment="center">
        <!-- Header Section -->
        <Label text="Welcome To Login Page" class="header-text" horizontalAlignment="center" />

        <!-- Input Fields Section -->
        <StackLayout class="input-fields-container">
            <TextField hint="Username" class="input-field" />
            <TextField hint="Password" secure="true" class="input-field" />
            <TextField hint="Class" class="input-field" />
            <TextField hint="Phone Number" class="input-field" />
            <TextField hint="School Name" class="input-field" />
        </StackLayout>

        <!-- Login Button -->
        <Button text="Login" tap="goToQuestionPage" class="login-button" />
        
        <!-- Optional: Add a "Forgot Password?" link -->
        <Label text="Forgot Password?" class="forgot-password-text" tap="onForgotPasswordTap" />
    </StackLayout>
</Page>
