<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" actionBarHidden="true">
    <StackLayout>
        <Label text="Select a Category:" />
        <ListPicker id="categoryPicker" items="{{ categoryNames }}" selectedIndexChange="onSelectedIndexChange" />
        
        <Label text="Select Number of Questions:" />
        <ListPicker id="numberOfQuestionsPicker" items="{{ numberOfQuestions }}" selectedIndexChange="onSelectedIndexChange" />
        
        <Label text="Select Difficulty:" />
        <ListPicker id="difficultyPicker" items="{{ difficulties }}" selectedIndexChange="onSelectedIndexChange" />
        
        <Button text="Next" tap="onNextTap" />
    </StackLayout>
</Page>