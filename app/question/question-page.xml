<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Quiz" class="action-bar" />
    <GridLayout rows="*, auto">
        <!-- Timer -->
        <StackLayout class="header" row="0">
            <Label text="Question No {{ number + 1 }}" class="h1" />
            <Label text="{{ timerMinutes }}:{{ timerSeconds }}" class="timer" />
        </StackLayout>

        <!-- Question and Details -->
        <ScrollView row="1">
            <StackLayout>
                <Label text="{{ currentQuestion.question }}" textWrap="true" class="h2" />
                <Label text="Category: {{ currentQuestion.category }}" />
                <Label text="Difficulty: {{ currentQuestion.difficulty }}" />
            </StackLayout>
        </ScrollView>

        <!-- Buttons for True/False -->
        <StackLayout row="2" orientation="horizontal" class="btn-container">
            <Button text="True" tap="{{ onAnswerTrue }}" />
            <Button text="False" tap="{{ onAnswerFalse }}" />
        </StackLayout>
    </GridLayout>
</Page>
