<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Questions" />
    <StackLayout>
        <Label text="{{ currentQuestion.value }}" textWrap="true" />
        <ListView items="{{ currentQuestion.allAnswers }}">
            <ListView.itemTemplate>
                <Label text="{{ $value }}" />
            </ListView.itemTemplate>
        </ListView>
        <Button text="Next" tap="onNextTap" />
    </StackLayout>
</Page>