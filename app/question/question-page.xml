<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" actionBarHidden="true">
    <StackLayout>
        <WebView id="webView" src="~/fetch-data.html" height="0" width="0" />
        <Label text="{{ currentQuestion }}" textWrap="true" class="question-label" />
        <ListView items="{{ currentAnswers }}" itemTap="onAnswerTap">
            <ListView.itemTemplate>
                <Label text="{{ $value }}" class="answer-label" />
            </ListView.itemTemplate>
        </ListView>
        <Button text="Next" tap="onNextTap" />
    </StackLayout>
</Page>