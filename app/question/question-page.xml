<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:rb="nativescript-radiobutton">
<Page class="page" navigatingTo="onNavigatingTo">
  <ActionBar title="Quiz Question" class="action-bar"></ActionBar>
  <StackLayout class="p-20">
    <Label text="{{ question }}" class="h1"></Label>
    <RadioGroup id="radioGroup" selectedIndex="0">
      <RadioButton text="{{ answers[0] }}"></RadioButton>
      <RadioButton text="{{ answers[1] }}"></RadioButton>
      <RadioButton text="{{ answers[2] }}"></RadioButton>
      <RadioButton text="{{ answers[3] }}"></RadioButton>
    </RadioGroup>
    <Button text="Submit" tap="submitAnswer"></Button>
  </StackLayout>
</Page>