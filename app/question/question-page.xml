<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
  <ActionBar title="Quiz Question" class="action-bar"></ActionBar>
  <StackLayout class="p-20">
    <Label text="{{ question }}" class="h1"></Label>
    <Repeater items="{{ answers }}">
      <Repeater.itemTemplate>
        <Button text="{{ $value }}" tap="selectAnswer" class="m-10"></Button>
      </Repeater.itemTemplate>
    </Repeater>
    <Button text="Submit" tap="submitAnswer" class="m-10"></Button>
  </StackLayout>
</Page>