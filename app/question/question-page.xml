<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" actionBarHidden="true">
    <StackLayout>
        <Label text="Questions" class="h1" />
        <ListView items="{{ questions }}">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{ question }}" class="question-label" />
                    <StackLayout>
                        <Label text="{{ correct_answer }}" class="answer-label" />
                        <Label text="{{ incorrect_answers[0] }}" class="answer-label" />
                        <Label text="{{ incorrect_answers[1] }}" class="answer-label" />
                        <Label text="{{ incorrect_answers[2] }}" class="answer-label" />
                    </StackLayout>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <Button text="Submit" tap="onSubmitTap" />
    </StackLayout>
</Page>